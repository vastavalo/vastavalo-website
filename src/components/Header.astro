---
interface Props {
  lang: "fi" | "en";
}

const { lang } = Astro.props;

const linksMap = {
  fi: {
    logo: { label: "Kameraseura", url: "/" },
    lang: { label: "English", url: "/en/" },
    pages: [
      { label: "Jäsenyys", url: "/" },
      { label: "Pimiö", url: "/pimio/" },
      { label: "Ihmiset", url: "/ihmiset/" },
    ],
  },

  en: {
    logo: { label: "Camera Club", url: "/en/" },
    lang: { label: "Suomi", url: "/" },
    pages: [
      { label: "Membership", url: "/en/" },
      { label: "Darkroom", url: "/en/darkroom/" },
      { label: "People", url: "/en/people/" },
    ],
  },
};

const links = linksMap[lang];

const href = (url: string) => "/vastavalo-website" + url;
---

<header class="border-b border-neutral-200">
  <div id="logo-area" class="bg-neutral-900 px-8 py-6">
    <a href={href(links.logo.url)}>
      <div class="text-xl text-neutral-100">{links.logo.label}</div>
      <div class="text-5xl font-bold text-neutral-100">Vastavalo</div>
    </a>
  </div>
  <nav class="flex flex-col items-center gap-8 py-6 px-8 sm:flex-row">
    {
      links.pages.map((page) => (
        <a
          href={href(page.url)}
          class="whitespace-nowrap text-base text-neutral-900"
        >
          {page.label}
        </a>
      ))
    }
    <a
      class="whitespace-nowrap text-base text-neutral-900 sm:ml-auto"
      href={href(links.lang.url)}
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="inline-block h-6 w-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M10.5 21l5.25-11.25L21 21m-9-3h7.5M3 5.621a48.474 48.474 0 016-.371m0 0c1.12 0 2.233.038 3.334.114M9 5.25V3m3.334 2.364C11.176 10.658 7.69 15.08 3 17.502m9.334-12.138c.896.061 1.785.147 2.666.257m-4.589 8.495a18.023 18.023 0 01-3.827-5.802"
        ></path>
      </svg>
      {links.lang.label}
    </a>
  </nav>
</header>
